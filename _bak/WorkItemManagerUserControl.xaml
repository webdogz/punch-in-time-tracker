                    <TreeViewItem.Header>
                        <TextBlock Text="Level 3.2" Foreground="Green" />
                    </TreeViewItem.Header>
                </TreeViewItem>
            </TreeViewItem>-->
        </TreeView>
        <ContentControl Grid.Column="2" Content="{Binding Path=CurrentView}" />
    </Grid>
</UserControl>
