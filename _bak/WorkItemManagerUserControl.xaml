                        <StackPanel Orientation="Horizontal">
                            <Image Source="/PunchIn;component/Resources/timer.png" Style="{DynamicResource childImage}" />
                            <TextBlock Text="Level 2.2 (Blue)" Style="{DynamicResource childText}" />
                        </StackPanel>
                    </TreeViewItem.Header>
                </TreeViewItem>
