<UserControl x:Class="PunchIn.Pages.Splash"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Splash User Control" Padding="5"
                   Background="{DynamicResource Accent}" Foreground="{DynamicResource WindowText}" FontWeight="Bold" />
        <Image Source="/PunchIn;component/Resources/stopwatch.ico" Stretch="None" Grid.Row="1" />

    </Grid>
</UserControl>
