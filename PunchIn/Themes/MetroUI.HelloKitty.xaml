<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pui="http://schema.webdogz/punchui">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/PunchIn;component/Assets/MetroUI.Light.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Color x:Key="AccentColor">#f472d0</Color>

    <Rectangle x:Key="WindowBackgroundContent" x:Shared="false" Margin="32">
        <Rectangle.Fill>
            <ImageBrush Opacity=".1" ImageSource="/Assets/Images/background.kitty.png" Stretch="None"  AlignmentX="Right" AlignmentY="Bottom" />
        </Rectangle.Fill>
    </Rectangle>

</ResourceDictionary>